mixin private_chat_tab_task(place, name)
	+b.private-chat-tab(tabindex=1)
		+e.P.place=place
		+e.P.name=name
		+e.P.task Задача

mixin private_chat_tab_task_class-active(place, name)
	+b.private-chat-tab.active(tabindex=1)
		+e.P.place=place
		+e.P.name=name
