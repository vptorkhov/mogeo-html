		+e.P.task Неактивен

mixin private_chat_tab_request-active(place, request_number)
	+b.private-chat-tab(tabindex=1)
		+e.P.place=place
		+e.icon-and-name
			+icon('lock')
			+e.P.request=` Запрос №${request_number}`
		+e.P.task Приватный чат активен

